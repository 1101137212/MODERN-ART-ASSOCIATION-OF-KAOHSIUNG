@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>高雄市現代畫學會</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href='http://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>

    <script src="~/Scripts/Shared/main.js"></script>
    <script src="http://use.edgefonts.net/poiret-one.js"></script>
    <!-- Fav and touch icons -->
</head>

<body style="background-image: url('../Image/Shared/indexbg.png');">

    <div class="container-fluid">
        <div style="height:20px;"></div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="carousel slide" id="carousel-80686">
                    <ol class="carousel-indicators">
                        <li class="active" data-slide-to="0" data-target="#carousel-80686">
                        </li>
                        <li data-slide-to="1" data-target="#carousel-80686">
                        </li>
                        <li data-slide-to="2" data-target="#carousel-80686">
                        </li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="add" alt="Carousel Bootstrap First" src="~/Image/Index/carousel1.jpg" />
                        </div>
                        <div class="item">
                            <img class="add" alt="Carousel Bootstrap Second" src="~/Image/Index/carousel2.jpg" />
                        </div>
                        <div class="item">
                            <img class="add" alt="Carousel Bootstrap Third" src="~/Image/Index/carousel3.jpg" />
                        </div>
                    </div> <a class="left carousel-control" href="#carousel-80686" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#carousel-80686" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
            </div>
        </div>
    </div>

    <div>
        <div style="text-align:center;"><img style=" padding-bottom: 10px; padding-top: 10px; " src="~/Image/Shared/logo.png"></div>
        <div class="container navwww">
            <nav class="navbar navbar-default">
                <div class="container-fluid navbar-inner">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" style=" padding-top: 20px; ">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse " sid="myNavbar">
                        <ul class="nav navbar-nav pull-center " style="border-left: 0px;">
                            <li class="indexnat navicon">
                                <a style=" padding-top: 5px; padding-bottom: 0px;">
                                    <i class="fa fa-question-circle fa-2x "></i>
                                    @Html.ActionLink("關於學會", "AssociationHistory", "AA")
                                </a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav pull-center ">
                            <li class="indexnat navicon">
                                <a style=" padding-top: 5px; padding-bottom: 0px; ">
                                    <i class="fa fa-users fa-2x "></i>
                                    @Html.ActionLink("會員簡介", "Member", "MEM")
                                </a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav pull-center ">
                            <li class="indexnat navicon">
                                <a style=" padding-top: 5px; padding-bottom: 0px; ">
                                    <i class="fa fa-file-text-o fa-2x"></i>
                                    @Html.ActionLink("最新消息", "LatestActivityNews", "LN")
                                </a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav pull-center ">
                            <li class="indexnat navicon">
                                <a style=" padding-top: 5px; padding-bottom: 0px; ">
                                    <i class="fa fa-info-circle fa-2x"></i>
                                    @Html.ActionLink("展覽快訊", "ExhibitionNews", "EX")
                                </a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav pull-center">
                            <li class="indexnat navicon">
                                <a style=" padding-top: 5px; padding-bottom: 0px; ">
                                    <i class="fa fa-book fa-2x"></i>
                                    @Html.ActionLink("作品集", "Artisticworks", "AWS")
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div><!-- nav -->
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>